# EditorConfig is awesome: https://editorconfig.org/

# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
end_of_line = lf
insert_final_newline = true
charset = utf-8
trim_trailing_whitespace = true # Get rid of whitespace to avoid diffs with a bunch of EOL changes

# CSS-Files
[*.css]
indent_style = tab
indent_size = 4

# SCSS-Files
[*.scss]
indent_style = space
indent_size = 2

# HTML-Files
[*.html]
indent_style = tab
indent_size = 4

# TMPL-Files
[*.tmpl]
indent_style = tab
indent_size = 4

# LESS-Files
[*.less]
indent_style = tab
indent_size = 4

# JS-Files
[*.js]
indent_style = tab
indent_size = 4

# JSON-Files
[*.json]
indent_style = space
indent_size = 2

# PHP-Files
[*.php]
indent_style = tab
indent_size = 4

# ReST-Files
[*.rst]
indent_style = space
indent_size = 3

# MD-Files
[*.md]
indent_style = space
indent_size = 4

# package.json or .travis.yml
[{package.json,.travis.yml}]
indent_style = space
indent_size = 2

# TypoScript. in .ts or .txt format
[{*.ts,*.txt}]
indent_style = tab
indent_size = 2

# XLF-Files
[*.xlf]
indent_style = tab
indent_size = 4

# SQL-Files
[*.sql]
indent_style = tab
indent_size = 2

# htaccess-Files
[{*.htaccess,*.htaccess.erb}]
indent_style = tab
